/* pages/meditation/meditation.wxss */
.container {
  background-color: #ded7ab;
  height: 100vh;
}

.content {
  height:100%;
  width:70%;
  background-color: white;
  border-radius: 20rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
}

.circle-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 20rpx auto;
  display: flex;
}

.description {
  text-align: center;
  font-size: 24rpx;
  margin: 10rpx 0;
}

.slider-container {
  margin: 20rpx 0;
}

.pause-button {
  margin-top: 30rpx;
  background-color: #ded7ab;
  color: white;
  padding: 10rpx;
  border-radius: 5rpx;
}

/**/
.modal-container {
  padding: 20rpx;
}

.modal {
  position: fixed;  /* 固定定位 */
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);  /* 半透明背景 */
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  background-color: white;  /* 悬浮页面背景 */
  padding: 20rpx;
  border-radius: 10rpx;
  width: 80%;  /* 悬浮页面宽度 */
}

