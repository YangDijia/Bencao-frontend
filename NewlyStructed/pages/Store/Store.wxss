.container {
  padding: 20px;
}

/* 搜索条样式 */
.search-bar {
  position: relative;
  width: 80%;
  padding: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #ddd;
}

.search-input {
  width: 100%;
  height: 60rpx;
  padding-left: 20rpx;
  border-radius: 30rpx;
  border: 1px solid #ddd;
}

.icon-bar {
  display: flex;
  width: 100%;
  justify-content: space-around;
  margin-top: 100rpx;
  margin-bottom: 20px;
}

.icon-item {
  
  text-align: center;
  display: flex;
  flex-direction: column;
}

.icon {
  width: 50px;
  height: 50px;
  border-radius: 25px;
}

.icon-text {
  margin-top: 8px;
  font-size: 14px;
}

.recommend-bar {
  background-color: #dcb49e;
  padding: 10px;
  margin-bottom: 20px;
  border-radius: 20rpx;
}

.recommend-text {
  color: white;
  font-size: 18px;
}

.product-list {
  background-color: aquamarine;
  display: flex;
  white-space: nowrap;
}

.product-row {
  display: flex;
}

.product-item {

  width: 160px;
  background-color: #f5f5f5;
  padding: 10px;
  border-radius: 10px;
}

.product-image {
  width: 100%;
  height: 120px;
  border-radius: 10px;
}

.product-info {
  margin-top: 10px;
}

.product-name {
  background-color: #dcb49e;
  padding: 5px;
  text-align: center;
  color: white;
}

.product-price {
  background-color: #9acc6b;
  padding: 5px;
  text-align: center;
  color: white;
}
